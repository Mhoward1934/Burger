
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h2>Burgers waiting!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>

    </div>
    <div class="col-md-4">

      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="burger">Burger Name:</label>
        </div>

        <form action="burger/create" method="POST">
          <textarea type="text" name="burger_name"></textarea><br>
          <input type="radio" name="devoured" value="1"> Devoured!<br>
          <input type="radio" name="waiting" value="0"> Waiting<br>
          <button type="submit">Add Burger</button>
        </form>

    </div>
    <div class="col-md-4">
      <h2>Burgers that have been devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>

    </div>
  </div>

</div>